<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="MainWindow" Height="500" Width="800">

    <Canvas Name="Board" Background="Black" KeyDown="OnKeyDown1" KeyUp="OnKeyUp" MouseMove="MouseMove" MouseDown="OnMouseDown"
            MouseUp="OnMouseUp">
        <Canvas Name="GameBoard" Focusable="True" Background="Black" ></Canvas>
        <Canvas Name="Interface"></Canvas>

    </Canvas>

</Window>
